<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_7"
    tools:context=".ShopFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/peteat"
            android:layout_width="582dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/design_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_shop"
                android:layout_width="461dp"
                android:layout_height="172dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/design_47" />

            <ImageButton
                android:id="@+id/btn_candy"
                android:layout_width="461dp"
                android:layout_height="207dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/design_48" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>